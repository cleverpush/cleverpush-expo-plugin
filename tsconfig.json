{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018"],
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "cleverpush/**/*",
    "support/**/*",
    "types/**/*",
    "app.plugin.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "ios",
    "android",
    "assets",
    "App.tsx",
    "index.ts"
  ]
}
